<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CrowdOpinion.Pages.Profile"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:drawables="clr-namespace:CrowdOpinion.Drawables"
    xmlns:m="clr-namespace:UraniumUI.Icons.MaterialIcons;assembly=UraniumUI.Icons.MaterialIcons"
    xmlns:model="clr-namespace:CrowdOpinion.Models"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:viewmodel="clr-namespace:CrowdOpinion.ViewModels"
    Title="Profile"
    x:DataType="viewmodel:ProfileViewModel">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding GoToSettingsCommand}" Text="Menu">
            <ToolbarItem.IconImageSource>
                <FontImageSource
                    FontFamily="MaterialRegular"
                    Glyph="{x:Static m:MaterialRegular.Menu}"
                    Size="24"
                    Color="{AppThemeBinding Light=Black,
                                            Dark=White}" />
            </ToolbarItem.IconImageSource>
        </ToolbarItem>
    </ContentPage.ToolbarItems>
    <RefreshView
        Command="{Binding RefreshCommand}"
        IsRefreshing="{Binding IsRefreshing}"
        RefreshColor="{StaticResource Primary}">
        <Grid
            Padding="20,0,20,0"
            RowDefinitions="Auto,*"
            RowSpacing="10">
            <Border StrokeShape="RoundRectangle 6,6,6,6" StrokeThickness="0">
                <Grid ColumnDefinitions="*" RowDefinitions="*,*">
                    <!--
                        Image
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Aspect="AspectFill"
                        BackgroundColor="Black"
                        HeightRequest="60"
                        Source="{Binding MyAvatarUrl, StringFormat='https://kecjwzwulktcrykauczv.supabase.co/storage/v1/object/public/avatars/{0}'}" /
                    -->
                    <Image
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Aspect="AspectFill"
                        BackgroundColor="Black"
                        HeightRequest="60"
                        Source="https://frutiger-aero.org/img/frutiger-aero-1.webp" />
                    <Border
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        BackgroundColor="Black"
                        Opacity="0.75"
                        StrokeThickness="0" />
                    <Label
                        Grid.Row="0"
                        Padding="10,10,0,0"
                        HorizontalOptions="Start"
                        Text="{Binding MyUserName}" />
                    <Label
                        Grid.Row="1"
                        Padding="10,0,0,10"
                        FontAttributes="Bold"
                        HorizontalOptions="Start"
                        Text="{Binding MyFullName}" />

                </Grid>
            </Border>
            <CollectionView
                Grid.Row="1"
                Header="My Questions"
                ItemsSource="{Binding QuestionObjects}"
                VerticalScrollBarVisibility="Always">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="2" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:QuestionObjectSupa">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems SwipeBehaviorOnInvoked="Close">
                                    <SwipeItem
                                        BackgroundColor="#ff4444"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:ProfileViewModel}}, Path=DeleteQuestionCommand}"
                                        CommandParameter="{Binding .}"
                                        IsDestructive="False">
                                        <SwipeItem.IconImageSource>
                                            <FontImageSource
                                                FontFamily="MaterialRegular"
                                                Glyph="{x:Static m:MaterialRegular.Delete_outline}"
                                                Color="{AppThemeBinding Light=Black,
                                                                        Dark=White}" />
                                        </SwipeItem.IconImageSource>
                                    </SwipeItem>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            <Grid
                                Padding="0,5,0,5"
                                BackgroundColor="{StaticResource OffBlack}"
                                ColumnDefinitions="*,*"
                                RowDefinitions="*,*,*">
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    FontAttributes="Bold"
                                    Text="{Binding Question}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    HorizontalOptions="Start"
                                    Text="{Binding AnswerOne}" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    Text="{Binding AnswerTwo}" />
                                <drawables:RatioGraphicsView
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HeightRequest="30"
                                    HorizontalOptions="Fill"
                                    Value1="{Binding AnswerOneCount}"
                                    Value2="{Binding AnswerTwoCount}">
                                    <drawables:RatioGraphicsView.Drawable>
                                        <drawables:RatioBarDrawable CornerRadius="5" />
                                    </drawables:RatioGraphicsView.Drawable>
                                </drawables:RatioGraphicsView>
                            </Grid>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </RefreshView>

</ContentPage>