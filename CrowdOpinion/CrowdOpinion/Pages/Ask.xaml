<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CrowdOpinion.Pages.Ask"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:CrowdOpinion.ViewModels"
    Title="Ask"
    x:DataType="viewmodel:AskViewModel">
    <Grid ColumnDefinitions="*" RowDefinitions="*,100,50,50,50,50,50,*">
        <Label
            Grid.Row="1"
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level1"
            Style="{StaticResource Headline}"
            Text="Ask your Question"
            TextColor="{AppThemeBinding Light=Black,
                                        Dark=White}"
            VerticalOptions="Center" />
        <Entry
            Grid.Row="2"
            Placeholder="Type your Question here"
            Text="{Binding QuestionText}" />
        <Entry
            Grid.Row="3"
            Placeholder="Answer 1"
            Text="{Binding AnswerOneText}" />
        <Entry
            Grid.Row="4"
            Placeholder="Answer 2"
            Text="{Binding AnswerTwoText}" />
        <Switch Grid.Row="5" />
        <Button
            Grid.Row="6"
            BackgroundColor="blue"
            Command="{Binding AskQuestionCommand}"
            Text="Send"
            TextColor="{AppThemeBinding Light=Black,
                                        Dark=White}"
            WidthRequest="100" />
    </Grid>

</ContentPage>